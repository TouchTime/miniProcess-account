.re-name {
  font-size: 28rpx;
  color: #666;
  padding-left: 30rpx;
}

.right-select {
  width: 15rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

.item-name, .item-money, .item-way {
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #e3e4e6;
  border-bottom: 1px solid #e3e4e6;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  background: #fff;
}

.item-ways {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
}

.picker {
  display: inline-block;
  position: absolute;
  right: 30rpx;
  color: #333;
  font-size: 30rpx;
}

.period {
  right: 30rpx;
  position: absolute;
  font-size: 30rpx;
  color: #fff;
}

.period text {
  background: #d5af77;
  padding: 10rpx 18rpx;
  margin-left: 20rpx;
  border-radius: 6rpx;
}

.session {
  /* display: inline-block;
 width:50%;
 height:100rpx;
 line-height:100rpx; */
}

.container {
  background: #fff;
  font-size: 28rpx;
  color: #666;
}

.session input {
  width: 140rpx;
  height: 60rpx;
  border: 2rpx solid #e3e4e6;
  border-radius: 8rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  margin-right: 10rpx;
}

.period-list {
  margin-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
}

.period-list .session-list:nth-child(2n) {
  text-align: right;
}

.session-period {
  margin-right: 36rpx;
}

.line {
  position: absolute;
  border-bottom: 1rpx solid #e3e4e6;
  width: 50%;
  /* margin-left:30rpx; */
}

.session-list {
  display: inline-block;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
}

.lists {
  border-bottom: 1rpx solid #e3e4e6;
}

.account-button {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  background: rgb(212, 170, 112);
  text-align: center;
  width: 100%;
  z-index: 99999999;
}

.save {
  font-size: 30rpx;
  color:#fff;
  text-align: center;
  line-height: 98rpx;
  background: rgb(212, 170, 112);
  height: 98rpx;
  /* padding: 35rpx 130rpx; */
}

.finish {
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  background: rgb(212, 170, 112);
  height: 98rpx;
  padding: 35rpx 164rpx;
}
